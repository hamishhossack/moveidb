{{#if selectedMovie }}
  <section class="selected-movie row">
    <div class="poster four columns">
      <img alt="poster - {{selectedMovie.title}}"
           src="
              {{#if poster_path}}
               https://image.tmdb.org/t/p/w500{{selectedMovie.poster_path}}
              {{else}}
               http://hamishhossack.co.uk/assets/images/logo.svg
              {{/if}}
              "
       >
    </div>
    <div class="content eight columns">
      <h2>{{selectedMovie.title}}</h2>
      <p>{{selectedMovie.content}}</p>
      <ul>
        <li>date: {{selectedMovie.date}}</li>
      </ul>
    </div>
  </section>
{{/if}}