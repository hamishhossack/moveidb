<section class="selected-movie row {{ternary selectedMovie "show" "hidden"}}"
         style="background-image:url('https://image.tmdb.org/t/p/w1280{{selectedMovie.backdrop_path}}')">
  <div class="content eight columns">
    <h2>{{selectedMovie.title}}</h2>
    <p>{{selectedMovie.overview}}</p>
    <ul class="inline">
      <li><i class="fa fa-thumbs-o-up"></i>&nbsp;{{selectedMovie.vote_count}}</li>
      <li>(Average: {{selectedMovie.vote_average}})</li>
    </ul>
    <ul>
      {{#if selectedMovie.adult}}
        <li><i class="fa fa-adult"></i></li>
      {{/if}}
      <li>Released: {{selectedMovie.release_date}}</li>
      <li>Popularity: {{selectedMovie.popularity}}</li>
    </ul>
  </div>
</section>
